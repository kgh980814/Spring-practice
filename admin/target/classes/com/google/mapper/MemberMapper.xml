<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.google.mapper.MemberMapper">

<resultMap type="com.google.domain.MemberVO" id="memberMap">
<id property="userid" column="userid"/> 
<result property="userid" column="userid"/> <!-- property는 MemberVO, column은 DB  -->
<result property="userpw" column="userpw"/>
<result property="userName" column="username"/>
<result property="regDate" column="regdate"/>
<result property="updateDate" column="updatedate"/>
<result property="enabled" column="enabled"/>
<collection property="authList" resultMap="authMap"/><!-- 조인할 테이블은 collection사용. -->
</resultMap>

<resultMap type="com.google.domain.AuthVO" id="authMap">
<result property="userid" column="userid"/> 
<result property="auth" column="auth"/> 
</resultMap>

<select id="read" resultMap="memberMap"><!-- JOIN을 사용하면 resultMap을 사용 -->
SELECT m.userid, m.userpw ,m.username,
m.regdate, m.updatedate,m.enabled, ma.auth
FROM tbl_member m JOIN tbl_member_auth ma
ON (m.userid = ma.userid) 
WHERE m.userid = #{userid}<!-- 조인 -->
</select>

</mapper>